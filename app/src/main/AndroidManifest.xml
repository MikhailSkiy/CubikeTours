<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mikhail.cubike" >

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/place_checkhov"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="activities.CitiesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCof_5uiMNy4I-TNebWFKrjntoy-lRL3Ws" />

        <activity
            android:name="activities.TracksActivity"
            android:label="@string/title_activity_cities" >
        </activity>
        <activity
            android:name="activities.DetailsActivity"
            android:label="@string/title_activity_details" >
        </activity>

        <service
            android:name=".service.LocationService"
            android:enabled="true" />

        <receiver android:name=".broadcasts.ReceiverPositioningAlarm" >

            <!-- this Broadcast Receiver only listens to the following intent -->
            <intent-filter>
                <action android:name="com.example.mikhail.cubike.broadcasts.ACTION_REFRESH_SCHEDULE_ALARM" />
            </intent-filter>
        </receiver>

        <activity
            android:name="activities.AchievmentActivity"
            android:label="@string/title_activity_achievment" >
        </activity>
    </application>

</manifest>
